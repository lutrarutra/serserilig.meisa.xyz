{{template "base" .}}

{{define "content"}}

    <div class="container">
        <div class="row">
            <div class="driver-standings col">
                <table class="table table-dark table-striped align-middle">
                    <thead>
                    <tr>
                        <th scope="col">Pos.</th>
                        <th scope="col"></th>
                        <th scope="col">Driver</th>
                        <th scope="col">Points</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row" class="driver-pos">1</th>
                        <td class="driver-team-logo">
                            <img src="https://www.formula1.com/content/dam/fom-website/teams/2022/ferrari-logo.png.transform/2col/image.png" alt="Fer">
                        </td>
                        <td class="driver-name">Charles Leclerc</td>
                        <td class="driver-points">45</td>
                    </tr>
                    <tr>
                        <th scope="row" class="driver-pos">2</th>
                        <td class="driver-team-logo">
                            <img src="https://www.formula1.com/content/dam/fom-website/teams/2022/ferrari-logo.png.transform/2col/image.png" alt="Fer">
                        </td>
                        <td class="driver-name">Carlos Sainz</td>
                        <td class="driver-points">33</td>
                    </tr>
                    <tr>
                        <th scope="row" class="driver-pos">3</th>
                        <td class="driver-team-logo">
                            <img src="https://www.formula1.com/content/dam/fom-website/teams/2022/red-bull-racing-logo.png.transform/2col/image.png" alt="RBR">
                        </td>
                        <td class="driver-name">Max Verstappen</td>
                        <td class="driver-points">25</td>
                    </tr>
                    <tr>
                        <th scope="row" class="driver-pos">4</th>
                        <td class="driver-team-logo">
                            <img src="https://www.formula1.com/content/dam/fom-website/teams/2022/mercedes-logo.png.transform/2col/image.png" alt="Mer">
                        </td>
                        <td class="driver-name">George Russell</td>
                        <td class="driver-points">22</td>
                    </tr>
                    <tr>
                        <th scope="row" class="driver-pos">5</th>
                        <td class="driver-team-logo">
                            <img src="https://www.formula1.com/content/dam/fom-website/teams/2022/mercedes-logo.png.transform/2col/image.png" alt="Mer">
                        </td>
                        <td class="driver-name">Lewis Hamilton</td>
                        <td class="driver-points">16</td>
                    </tr>
                    </tbody>
                </table>
            </div>

            <div class="team-standings col">
                <table class="table table-dark table-striped align-middle">
                    <thead>
                    <tr>
                        <th scope="col">Pos.</th>
                        <th scope="col"></th>
                        <th scope="col">Team</th>
                        <th scope="col">Points</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row" class="driver-pos">1</th>
                        <td class="driver-team-logo">
                            <img src="https://www.formula1.com/content/dam/fom-website/teams/2022/ferrari-logo.png.transform/2col/image.png" alt="Fer">
                        </td>
                        <td class="driver-name">Ferrari</td>
                        <td class="driver-points">78</td>
                    </tr>
                    <tr>
                        <th scope="row" class="driver-pos">2</th>
                        <td class="driver-team-logo">
                            <img src="https://www.formula1.com/content/dam/fom-website/teams/2022/mercedes-logo.png.transform/2col/image.png" alt="Mer">
                        </td>
                        <td class="driver-name">Mercedes</td>
                        <td class="driver-points">38</td>
                    </tr>
                    <tr>
                        <th scope="row" class="driver-pos">3</th>
                        <td class="driver-team-logo">
                            <img src="https://www.formula1.com/content/dam/fom-website/teams/2022/red-bull-racing-logo.png.transform/2col/image.png" alt="RBR">
                        </td>
                        <td class="driver-name">Red Bull Racing</td>
                        <td class="driver-points">37</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{{end}}

{{define "css"}}

    <style>
        img {
            width: 50px;
            height: 50px;
        }

        .driver-pos {
            width: 5%
        }
        .driver-team-logo {
            width: 5%
        }
        .driver-name {
            text-align: left;
        }
        .driver-points {
            width: 10%
        }

        .driver-standings {
            border-right: 2px solid lightgray;
            height: 500px;
        }
        .team-standings {
            border-left: 2px solid lightgray;
            height: 500px;
        }
    </style>

{{end}}


{{define "js"}}

    <script>
        activateNav('nav-standings')
    </script>

{{end}}